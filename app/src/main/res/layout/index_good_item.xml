<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_info_back"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:focusable="false"
    >
  <RelativeLayout
      android:id="@+id/item_image"
      android:layout_width="85dp"
      android:layout_height="85dp">

      <com.android.volley.toolbox.NetworkImageView
          android:id="@+id/index_item_img"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerInside"
          />

      <ImageView
          android:id="@+id/index_item_expired"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/home_ic_soldout"
          android:padding="10dp"
          android:visibility="gone"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

          <TextView
              android:id="@+id/index_item_shenjia"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:background="@color/red"
              android:visibility="gone"
              android:text="@string/good_price"
              android:padding="1dp"
               android:layout_marginBottom="3dp"
              />
          <TextView
              android:id="@+id/index_item_global"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:background="@color/siri_blue"
              android:visibility="gone"
              android:text="@string/global"
              android:padding="1dp"
               android:layout_marginBottom="3dp"
              />
          <TextView
              android:id="@+id/index_item_slow"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:background="@color/yellow_back"
              android:visibility="gone"
              android:text="@string/slow"
              android:padding="1dp"
               android:layout_marginBottom="3dp"
              />
          <TextView
              android:id="@+id/index_item_cheap"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:background="@color/yellow_light_back"
              android:visibility="gone"
              android:text="@string/cheap"
              android:padding="1dp"
               android:layout_marginBottom="3dp"
              />


          </LinearLayout>




      </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/item_image"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/index_item_mall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/new_forgot"
                />
            <TextView
                android:id="@+id/index_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/new_forgot"
                android:layout_alignParentRight="true"
                />


            </RelativeLayout>

        <TextView
            android:id="@+id/index_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/me_info_text"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/index_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/key"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="end"
            />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="right"
           android:orientation="horizontal"
           >
           <TextView
               android:id="@+id/index_item_read"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="13sp"
               android:textColor="@color/new_forgot"
               android:drawableLeft="@drawable/home_ic_view"
               android:drawablePadding="1dp"
               android:layout_marginRight="8dp"
               />
           <TextView
               android:id="@+id/index_item_review"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/home_ic_comment"
               android:drawablePadding="1dp"
               android:textSize="13sp"
               android:textColor="@color/new_forgot"
               />


           </LinearLayout>





        </LinearLayout>






</RelativeLayout>