<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_back"
    tools:context="com.liuzhuni.lzn.core.personInfo.DetailInfoActivity">
    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="27dp"
        android:orientation="vertical">

        <include layout="@layout/line"/>
        <RelativeLayout
            android:id="@+id/detail_head_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/detail_text_layout"
            >


            <TextView
                style="@style/detail_text"
                android:text="@string/head_img"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/detail_head_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more"
                android:layout_marginLeft="8dp"
                android:layout_alignParentRight="true"
                />
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/head_detail_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_touxiang"
                android:layout_toLeftOf="@id/detail_head_right"
                />

            </RelativeLayout>

        <!--head img-->
        <include layout="@layout/line"/>
        <RelativeLayout
            android:id="@+id/detail_nickname_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/detail_text_layout"
            >


            <TextView
                style="@style/detail_text"
                android:text="@string/nick_name"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/detail_nick_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/nickname_detail"
                style="@style/detail_text_gray"
                android:layout_toLeftOf="@id/detail_nick_right"
                android:layout_centerVertical="true"
                />

            </RelativeLayout>


        <include layout="@layout/line"/>
        <RelativeLayout
            android:id="@+id/detail_tel_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/detail_text_layout"
            >


            <TextView
                style="@style/detail_text"
                android:text="@string/tel"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 />

            <ImageView
                android:id="@+id/detail_tel_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/tel_detail"
                style="@style/detail_text_gray"
                android:layout_toLeftOf="@id/detail_tel_right"
                android:layout_centerVertical="true"
                />

            </RelativeLayout>



        <include layout="@layout/line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/detail_text_layout"
            android:visibility="gone"
            >


            <TextView
                style="@style/detail_text"
                android:text="@string/email_address"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/email_detail"
                style="@style/detail_text_gray"
                android:layout_alignParentRight="true"
                />

            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            style="@style/detail_text_layout"
            >


            <TextView
                style="@style/detail_text"
                android:text="@string/adress"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:id="@+id/detail_adress_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/adress_detail"
                style="@style/detail_text_gray"
                android:layout_toLeftOf="@id/detail_adress_right"
                />
            </RelativeLayout>





       </LinearLayout>


</RelativeLayout>
