    @Override
    protected void setListener() {

        mPullList.setOnRefreshListener(new PullToRefreshListView.OnRefreshListener<ListView>() {

            @Override
            public void onPullDownToRefresh(
                    PullToRefreshBase<ListView> refreshView) {
                // TODO Auto-generated method stub
                mIsHistory = true;
                Date date = new Date();
                mTime = mDateFormat.format(date);
                if (mIsLoacl) {
                    List<DbModel> dbList = DatabaseOperate.getDb(db);
                    fromDb(dbList);
                    mPullList.onPullDownRefreshComplete();
//					// 上拉刷新完成
                    mPullList.onPullUpRefreshComplete();
                    mIsLoacl = false;
                } else {

                    if (mIndex < mTotal) {
                        //网络请求
                        pullHistoryData(mIndex);

                    } else {

                        // 设置是否有更多的数据
                        ToastUtil.show(TextSiriActivity.this, getResources().getText(R.string.no_more_error));
//                    mPullList.setHasMoreData(false);
                    }

                    // 下拉加载完成
                    mPullList.onPullDownRefreshComplete();
//					// 上拉刷新完成
                    mPullList.onPullUpRefreshComplete();
                }


            }

            @Override
            public void onPullUpToRefresh(PullToRefreshBase<ListView> refreshView) {

                mIsHistory = false;
                mPullList.onPullDownRefreshComplete();
//					// 上拉刷新完成
                mPullList.onPullUpRefreshComplete();
            }
        });

    }

    protected synchronized void addList(SiriModel model){

        mCurrentList.add(model);


    }
    protected synchronized void addListAll(List<SiriModel> list){

        mCurrentList.addAll(0,list);


    }


    protected synchronized void pullHistoryData(final int id) {
        executeRequest(new GsonBaseRequest<BaseListModel<DbModel>>(Request.Method.GET, UrlConfig.GET_HISTORY + id, new TypeToken<BaseListModel<DbModel>>() {
        }.getType(), responseHisListener(), errorListener()) {
        });
    }

    private Response.Listener<BaseListModel<DbModel>> responseHisListener() {
        return new Response.Listener<BaseListModel<DbModel>>() {
            @Override
            public void onResponse(BaseListModel<DbModel> historyModel) {

                if (historyModel.getRet() == 0) {
                    mTotal = historyModel.getTotalpage();
                    mIndex++;
                    if (historyModel.getData() != null) {
                        fromDb(historyModel.getData());
                        mPullList.setLastUpdatedLabel(mTime);//设置最后刷新时间
                        Date date = new Date();
                        mTime = mDateFormat.format(date);

                    }

                } else {
                    mIndex = mTotal;
                }
                mPullList.onPullDownRefreshComplete();
                // 上拉刷新完成
                mPullList.onPullUpRefreshComplete();
            }
        };

    }

    protected void fromDb(List<DbModel> dbList) {

        List<SiriModel> tempList = new ArrayList<SiriModel>();
        if (dbList != null) {
            for (DbModel dbModel : dbList) {
                if (dbModel.getType() != 7) {
                    if (dbModel.getType() == 1 || dbModel.getType() == 0) {
                        tempList.add(new SiriModel<String>(dbModel.getType(), dbModel.getBody()));
                    }
                    if (dbModel.getType() == SiriAdapter.RIGHT_GOODS) {
                        ArrayList<SelectGoodsModel> goodsList = new Gson().fromJson(dbModel.getBody(), new TypeToken<ArrayList<SelectGoodsModel>>() {
                        }.getType());
                        tempList.add(new SiriModel<GoodsListModel>(SiriAdapter.RIGHT_GOODS, new GoodsListModel(goodsList)));

                    }


                }

            }
//            mCurrentList.addAll(0, tempList);
            addListAll(tempList);
            mAdapter.notifyDataSetChanged();
            mListView.setSelection(0);

        }

    }

