<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liuzhuni.lzn.core.login.LoginActivity">

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:layout_below="@id/title"
        android:orientation="vertical">

        <com.liuzhuni.lzn.core.select.ui.CleanableEditText
            android:id="@+id/tel_login"
            style="@style/edit_text"
            android:drawableLeft="@drawable/login_name"
            android:drawableRight="@drawable/btn_delete"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawablePadding="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:hint="@string/tel_email" />
        <com.liuzhuni.lzn.core.login.ui.DoubleRightView
            android:id="@+id/passwd_login"
            style="@style/wrap_text"
            android:layout_marginTop="15dp"
            android:hint="@string/input_passwd"

            >


            </com.liuzhuni.lzn.core.login.ui.DoubleRightView>



        <TextView
            android:id="@+id/submit_login"
            android:layout_marginTop="30dp"
            android:text="@string/login"
            style="@style/button_style" />

        <TextView
            android:id="@+id/forgot_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="right"
            android:text="@string/forget_passwd"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="60dp"
                android:layout_height="1dp"
                android:background="@color/text_gray" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="@string/co_login"
                android:textColor="@color/co_login_color"
                android:textSize="13sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="1dp"
                android:background="@color/text_gray" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <ImageView
                android:id="@+id/qq_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_qq_n"/>
            <ImageView
                android:id="@+id/weixin_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_weixin_n"/>
            <ImageView
                android:id="@+id/sina_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_weibo_n"/>

            </LinearLayout>

    </LinearLayout>



</RelativeLayout>
