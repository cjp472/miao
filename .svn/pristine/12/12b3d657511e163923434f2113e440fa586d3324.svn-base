<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liuzhuni.lzn.core.regist.RegistActivity">

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:layout_below="@id/title"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="@string/regist_tel"
            android:textColor="@color/regist_text"
            android:textSize="18sp" />

        <com.liuzhuni.lzn.core.login.ui.CleanNoEditText
            android:id="@+id/regist_et"
            style="@style/edit_text"
            android:layout_marginTop="7dp"
            android:drawableRight="@drawable/btn_delete"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:hint="@string/regist_tel_hint"
            android:inputType="number"
            android:maxLength="13"
             />


        <TextView
            android:id="@+id/submit_regist"
            android:layout_marginTop="30dp"
            style="@style/button_style"
            android:text="@string/get_message" />

    </LinearLayout>

</RelativeLayout>
