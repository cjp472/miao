<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >



    <TextView
        android:id="@+id/message_year"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textColor="@color/co_login_color"
        android:textSize="12sp"
        android:gravity="right"
        android:text="2015"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/message_month"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textColor="@color/co_login_color"
        android:layout_below="@id/message_year"
        android:gravity="right"
        android:textSize="15sp"
        android:text="3/17"
        />
    <TextView
        android:layout_width="2dp"
        android:layout_height="120dp"
        android:background="@color/message_circle"
        android:layout_toRightOf="@id/message_month"
        android:layout_marginLeft="19dp"
        />
    <ImageView
        android:id="@+id/message_cirle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/circle"
        android:layout_toRightOf="@id/message_month"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/message_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/message_cirle"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:textColor="@color/me_info_text"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_xiaoxi_bg_yidu"
        />


</RelativeLayout>