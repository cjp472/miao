<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="8dp"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/siri_good_item_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/siri_goods_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/siri_good_item_iv"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        >
        <TextView

            android:id="@+id/siri_goods_item_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/regist_text"
            />
        <TextView
            android:id="@+id/siri_goods_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/me_info_text"
            />
        <TextView
            android:id="@+id/siri_goods_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:textColor="@color/key"
            />



        </LinearLayout>

</RelativeLayout>
