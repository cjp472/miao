<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_info_back"
    android:paddingLeft="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/custom_view_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/custom_view_text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/custom_view_left"
        android:textColor="@color/me_info_text"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/custom_view_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/sustom_view_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginRight="5dp"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:background="@drawable/num_back"
        android:layout_toLeftOf="@id/custom_view_right"
        />
    <TextView
        android:id="@+id/custom_view_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/regist_text"
        android:gravity="right"
        android:layout_marginRight="13dp"
        android:textSize="13sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/custom_view_right"
        android:text="@string/first_share"
        android:visibility="gone"
        />
    
    <ImageView
        android:id="@+id/red_dot"
        android:layout_toLeftOf="@id/custom_view_right"
        android:layout_marginRight="2dp"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/red_dot"
        android:visibility="gone"
        />





</RelativeLayout>
