<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liuzhuni.lzn.core.regist.SendCodeActivity">

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:layout_below="@id/title"
        android:orientation="vertical">

        <TextView
            android:id="@+id/code_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/had_send"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:textColor="@color/regist_text"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="left"
            >


        <com.liuzhuni.lzn.core.select.ui.CleanableEditText
            android:id="@+id/send_et"
            style="@style/edit_text"
            android:layout_width="wrap_content"
            android:drawableRight="@drawable/btn_delete"
            android:paddingLeft="8dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingRight="15dp"
            android:hint="@string/send_code_hint"
            android:inputType="number"
            android:maxLength="6"
            />

           <TextView
                android:id="@+id/send_again"
                style="@style/button_style"
                android:background="@drawable/button_select_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="@string/send_again" />



        </LinearLayout>


        <TextView
            android:id="@+id/send_next"
            style="@style/button_style"
            android:layout_marginTop="30dp"
            android:text="@string/next" />

    </LinearLayout>

</RelativeLayout>
