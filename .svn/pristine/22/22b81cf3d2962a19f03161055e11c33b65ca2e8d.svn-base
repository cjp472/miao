<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liuzhuni.lzn.core.regist.RegistActivity">

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:layout_below="@id/title"
        android:orientation="vertical">


        <com.liuzhuni.lzn.core.select.ui.CleanableEditText
            android:id="@+id/nick_name_et"
            style="@style/edit_text"
            android:layout_marginTop="7dp"
            android:drawableRight="@drawable/btn_delete"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:hint="@string/nickname_hint"
            android:maxLength="10"
            android:singleLine="true"
            />


        <TextView
            android:id="@+id/submit_nick_name"
            android:layout_marginTop="30dp"
            style="@style/button_style"
            android:text="@string/feedback_submit" />

    </LinearLayout>

</RelativeLayout>

