<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/user_head"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@color/red"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_head"
        android:layout_alignRight="@id/user_head"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="@color/comment_light"
        android:text="10楼"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/user_head"
        android:layout_marginLeft="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/filter_text"
                android:text="吉克斯勒"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="right"
                android:textColor="@color/filter_text"
                android:text="20分钟前"
                />


            </LinearLayout>


        <com.liuzhuni.lzn.core.comment.ui.CommentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            </com.liuzhuni.lzn.core.comment.ui.CommentLinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="19sp"
            android:textColor="@color/html_text"
            android:text="20分钟前"
            />



        </LinearLayout>




    </RelativeLayout>