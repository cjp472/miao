    @Override
    protected void initData() {
        mImageLoader = RequestManager.getImageLoader();


        if (getIntent() != null) {
            if (getIntent().getExtras() != null) {

                if (getIntent().getExtras().getBoolean("ispush", false)) {
                    mIsInit = false;
                }
                sId = getIntent().getExtras().getInt("id");
                mPush = getIntent().getExtras().getString("body");
            }
        }

        helper = new DataBaseHelper(this);
        db = helper.getWritableDatabase();
        mList = new ArrayList<SiriModel>();

//        mIsInit=false;
        //此处初始化判断
        if (mIsInit) {
            mList.add(new SiriModel<String>(SiriAdapter.LEFT_TEXT, getResources().getString(R.string.dialog_first)));
            mList.add(new SiriModel<String>(SiriAdapter.RIGHT_TEXT_CLICK, getResources().getString(R.string.dialog_second)));
        } else {//push传值
            List<DbModel> pushList = new Gson().fromJson(mPush, new TypeToken<ArrayList<DbModel>>() {
            }.getType());

            for (DbModel dbModel : pushList) {
                if (dbModel.getType() == 2 || dbModel.getType() == 0) {
                    mList.add(new SiriModel<String>(dbModel.getType(), dbModel.getBody()));
                }
                if (dbModel.getType() == 3) {
                    ArrayList<SelectGoodsModel> goodsList = new Gson().fromJson(dbModel.getBody(), new TypeToken<ArrayList<SelectGoodsModel>>() {
                    }.getType());

                    mList.add(new SiriModel<GoodsListModel>(SiriAdapter.RIGHT_GOODS, new GoodsListModel(goodsList)));
                }

            }
            DatabaseOperate.insert(db, sId, pushList);
            mList.add(new SiriModel(SiriAdapter.RIGHT_DIALOG, true));
        }
        mThread.start();
        mAdapter = new SiriAdapter(mCurrentList, mList, this, mImageLoader);//mlist 实际掌控 在adapter中有操作  mCurrentlist用于模拟

    }

